{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
